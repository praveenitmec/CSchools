<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Student Count</th>
      <th>City</th>
      <th>State Code</th>
      <th>Phone Number</th>    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.stype %></td>
        <td><%= school.school_detail.st_count %></td>
        <td><%= school.school_address.city %></td>
        <td><%= school.school_address.state_code %></td>
        <td><%= school.school_address.phone_number %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

